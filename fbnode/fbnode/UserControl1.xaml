    <UserControl.Resources>
        <DataTemplate x:Key="StandardCommandTemplate">
            <StackPanel Orientation="Horizontal" Background="LightGreen">
                <TextBlock Text="{Binding seq_n}" FontWeight="Bold" Width="16" />
                <TextBlock Width="36"/>
                <TextBox Text="{Binding acc}" Margin="14,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding dec}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding speed}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angle}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angleaux}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding movecount}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_count}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding blow_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="WaitStandardCommandTemplate">
            <StackPanel Orientation="Horizontal" Background="LightBlue">
                <TextBlock Text="{Binding seq_n}" FontWeight="Bold" Width="16" />
                <TextBlock Text="{Binding wait_time}" Width="20" TextAlignment="Right"/>
                <TextBlock Text="ms" Width="16"/>
                <TextBox Text="{Binding acc}" Margin="14,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding dec}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding speed}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angle}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angleaux}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding movecount}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_count}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding blow_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="MixCommandTemplate">
            <StackPanel Orientation="Horizontal" Background="Pink">
                <TextBlock Text="{Binding seq_n}" FontWeight="Bold" Width="16" />
                <TextBlock Width="36"/>
                <TextBox Text="{Binding acc}" Margin="14,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding dec}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding speed}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angle}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angleaux}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding movecount}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_count}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding blow_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="WaitMixCommandTemplate">
            <StackPanel Orientation="Horizontal" Background="LightYellow">
                <TextBlock Text="{Binding seq_n}" FontWeight="Bold" Width="16" />
                <TextBlock Text="{Binding wait_time}" Width="20" TextAlignment="Right"/>
                <TextBlock Text="ms" Width="16"/>
                <TextBox Text="{Binding acc}" Margin="14,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding dec}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding speed}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angle}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding angleaux}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding movecount}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_count}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding flip_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox Text="{Binding blow_time}" Margin="9,0,0,0" Width="30" Height="20" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

        <local:CommandTemplateSelector x:Key="CommandTemplateSelector"
                                      StandardTemplate="{StaticResource StandardCommandTemplate}"
                                      MixTemplate="{StaticResource MixCommandTemplate}" WaitStandardTemplate="{StaticResource WaitStandardCommandTemplate}" WaitMixTemplate="{StaticResource WaitMixCommandTemplate}"/>
