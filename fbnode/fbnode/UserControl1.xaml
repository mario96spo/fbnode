<UserControl x:Class="fbnode.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:fbnode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="735*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="0,-10,0,10" Grid.ColumnSpan="3">
            <TabItem Header="MOVE" HorizontalContentAlignment="Center" Margin="83,28,-83,-28">
                <Grid Background="#FFFFAF00">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="225,45,0,0" VerticalAlignment="Top" Height="62" Width="324" FontSize="48" HorizontalContentAlignment="Center"/>
                    <!--<TextBox x:Name="Text_Title" HorizontalAlignment="Left" Margin="47,95,0,0" TextWrapping="Wrap" Text="Type your text here" VerticalAlignment="Top" Width="115" Height="24"/>-->
                    <Button x:Name="Button_Save" Content="Save" Margin="470,304,149,99" Click="Button_Save_Click"/>
                    <CheckBox Content="Light" HorizontalAlignment="Left" Margin="549,59,0,0" VerticalAlignment="Top" Checked="Light_Checked" Unchecked="Light_unChecked"/>
                    <CheckBox Content="DO1" HorizontalAlignment="Left" Margin="549,95,0,0" VerticalAlignment="Top" Checked="DO1_Checked" Unchecked="DO1_unChecked"/>
                    <Button x:Name="Test_Move" Content="Test" Click="Test_Move_Click" HorizontalAlignment="Left" Margin="163,283,0,0" VerticalAlignment="Top" Height="51" Width="92"/>
                    <Slider x:Name="angleSlider"  HorizontalAlignment="Left" Margin="238,256,0,0" VerticalAlignment="Top" Width="200" Minimum="-360" Maximum="360" Value="{Binding SharedAngle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,256,0,0" TextWrapping="Wrap"  Text="{Binding ElementName=angleSlider, Path=Value, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <Slider x:Name="speedSlider" HorizontalAlignment="Left" Margin="238,225,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="500" Value="{Binding SharedSpeed, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,225,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=speedSlider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="191,255,0,0" TextWrapping="Wrap" Text="Angle:" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="191,224,0,0" TextWrapping="Wrap" Text="Speed:" VerticalAlignment="Top"/>
                    <Slider x:Name="decSlider" HorizontalAlignment="Left" Margin="238,193,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="250" Value="{Binding SharedDec, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,193,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=decSlider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="157,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="it-it" Text="De"/><Run Text="celeration:"/></TextBlock>
                    <Slider x:Name="accSlider" HorizontalAlignment="Left" Margin="238,161,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="250" Value="{Binding SharedAcc, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,161,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=accSlider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="158,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Acceleration"/><Run Language="it-it" Text=":"/></TextBlock>
                    <Button Content="vision job" FontSize="13" HorizontalAlignment="Left" Margin="338,317,0,0" VerticalAlignment="Top" Height="27" Width="77" Click="Button_Click"/>
                    <Button x:Name="append_button" Content="Append" HorizontalAlignment="Left" Margin="537,329,0,0" VerticalAlignment="Top" Click="append_button_Click"/>

                </Grid>
            </TabItem>
            <TabItem Header="SHAKE" Margin="83,28,-83,-28">
                <Grid>
                    <Button x:Name="Test_Shake" Content="Test" Click="Test_Shake_Click" HorizontalAlignment="Left" Margin="162,319,0,0" VerticalAlignment="Top" Height="51" Width="92"/>
                    <Slider x:Name="angleccwSlider"  HorizontalAlignment="Left" Margin="238,178,0,0" VerticalAlignment="Top" Width="200" Minimum="-360" Maximum="360" Value="{Binding SharedCCWAngle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <Slider x:Name="anglecwSlider"  HorizontalAlignment="Left" Margin="238,209,0,0" VerticalAlignment="Top" Width="200" Minimum="-360" Maximum="360" Value="{Binding SharedAngle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,178,0,0" TextWrapping="Wrap"  Text="{Binding ElementName=angleccwSlider, Path=Value, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <Slider x:Name="speed2Slider" HorizontalAlignment="Left" Margin="238,147,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="500" Value="{Binding SharedSpeed, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,147,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=speed2Slider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="164,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="it-it" Text="CCW "/><Run Text="Angle:"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="191,146,0,0" TextWrapping="Wrap" Text="Speed:" VerticalAlignment="Top"/>
                    <Slider x:Name="dec2Slider" HorizontalAlignment="Left" Margin="238,116,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="250" Value="{Binding SharedDec, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,116,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=dec2Slider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="157,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="it-it" Text="De"/><Run Text="celeration:"/></TextBlock>
                    <Slider x:Name="acc2Slider" HorizontalAlignment="Left" Margin="238,84,0,0" VerticalAlignment="Top" Width="200" Minimum="0" Maximum="250" Value="{Binding SharedAcc, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,84,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=acc2Slider, Mode=TwoWay, StringFormat={}{0:0}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="158,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Acceleration"/><Run Language="it-it" Text=":"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="460,209,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=anglecwSlider, Mode=TwoWay, StringFormat=\{0:0\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="171,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="it-it" Text="CW "/><Run Text="Angle:"/></TextBlock>
                    <Slider x:Name="countSlider" HorizontalAlignment="Left" Margin="238,242,0,0" VerticalAlignment="Top" Width="200" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding SharedCount, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                    <TextBox HorizontalAlignment="Left" Margin="460,242,0,0" TextWrapping="Wrap"  Text="{Binding Value, ElementName=countSlider, Mode=TwoWay, StringFormat=\{0:0\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="48" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="192,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="it-it" Text="Count:"/></TextBlock>
                    <TextBlock x:Name="statusBox" HorizontalAlignment="Left" Margin="645,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
